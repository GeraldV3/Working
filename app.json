{
  "expo": {
    "name": "Project EYES",
    "slug": "project-eyes",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/splash.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#006A71"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yume0616.projecteyes",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.yume0616.projecteyes",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "icon": "./assets/images/adaptive-icon.png"
      // âœ… Removed versionCode, EAS handles it
    },
    "web": {
      "bundler": "metro",
      "output": "server",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "exp://192.168.254.102:8082"
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": "exp://192.168.254.102:8082"
      },
      "eas": {
        "projectId": "a819b789-03bc-4543-955b-1590eb7b8327"
      }
    },
    "owner": "yume0616"
  }
}
